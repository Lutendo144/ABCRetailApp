@model List<ABCRetailApp.Models.Order>

<h2>My Orders</h2>

@if (!Model.Any())
{
    <p>You have no orders yet.</p>
    <a class="btn btn-primary" asp-action="ViewProducts" asp-controller="Customer">Shop Now</a>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.RowKey</td>
                    <td>@order.OrderDate.ToString("g")</td>
                    <td>@order.Status</td>
                    <td>
                        <a class="btn btn-info btn-sm"
                           asp-action="OrderDetails"
                           asp-route-orderId="@order.RowKey">View Items</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
