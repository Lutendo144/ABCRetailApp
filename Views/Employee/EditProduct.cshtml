@model ABCRetailApp.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-4">
    <h2 class="mb-4">Edit Product</h2>

    <a asp-action="ViewProducts" class="btn btn-secondary mb-3">← Back to Products</a>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card shadow-sm">
        <div class="row g-0">
            <div class="col-md-4 text-center p-3">
                <img src="@Model.ImageUrl" class="img-fluid rounded" style="max-height:250px; object-fit:cover;" alt="@Model.ProductName" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="RowKey" />

                        <div class="mb-3">
                            <label class="form-label">Product Name</label>
                            <input asp-for="ProductName" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Category</label>
                            <input asp-for="Category" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Price</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Quantity</label>
                            <input asp-for="Quantity" type="number" class="form-control" required />
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="OutOfStock" class="form-check-input" type="checkbox" />
                            <label class="form-check-label">Out of Stock</label>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Update Image (optional)</label>
                            <input type="file" name="productImage" class="form-control" />
                        </div>

                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <a asp-action="ViewProducts" class="btn btn-secondary ms-2">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
