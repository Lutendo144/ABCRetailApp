@model List<ABCRetailApp.Models.CartItem>

<h2>Order Completed Successfully!</h2>
<p>Order ID: <strong>@ViewBag.OrderId</strong></p>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>R @($"{item.Price:N2}")</td>   
                <td>@item.Quantity</td>
                <td>R @($"{item.Price * item.Quantity:N2}")</td>
            </tr>
        }
    </tbody>
</table>

<h4>Total: R @($"{ViewBag.Total:N2}")</h4>

<div class="mt-3">
    <a class="btn btn-primary" href="@Url.Action("ViewProducts", "Customer")">Go Back to Shopping</a>
</div>
