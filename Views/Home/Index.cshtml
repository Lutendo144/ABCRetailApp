@{
    ViewData["Title"] = "Welcome";
}

<div class="hero-section d-flex align-items-center justify-content-center text-center text-white">
    <div class="overlay"></div>
    <div class="content">
        <h1 class="display-4 fw-bold">Welcome to ABC Retail</h1>
        <p class="lead mb-4">Fast, reliable, and scalable online shopping experience</p>

        <div class="row mt-4">
            <div class="col-md-6 mb-3">
                <a href="/Customer/Login" class="btn btn-lg btn-primary w-75 shadow-lg">Customer Portal</a>
            </div>
            <div class="col-md-6 mb-3">
                <a href="/Employee/Login" class="btn btn-lg btn-success w-75 shadow-lg">Employee Portal</a>
            </div>
        </div>
    </div>
</div>


<section class="py-5 text-center">
    <div class="container">
        <h2 class="fw-bold mb-3">About ABC Retail</h2>
        <p class="text-muted">We are a rapidly growing online retailer, committed to delivering seamless shopping experiences with innovative cloud-powered solutions. Our systems are built on Microsoft Azure, ensuring high scalability, reliability, and cost-effectiveness.</p>
    </div>
</section>


<section class="py-5 bg-light">
    <div class="container text-center">
        <h2 class="fw-bold mb-5">Why Choose Us?</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <h4 class="fw-bold">⚡ Scalability</h4>
                        <p>Our platform handles peak shopping seasons effortlessly with Azure services.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <h4 class="fw-bold">🔒 Reliability</h4>
                        <p>Built with fault-tolerant messaging and secure storage for smooth operations.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <h4 class="fw-bold">💰 Cost-Effectiveness</h4>
                        <p>Optimized infrastructure ensures maximum performance at minimal cost.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="py-5 text-center bg-primary text-white">
    <div class="container">
        <h2 class="fw-bold mb-3">Get Started Today</h2>
        <p class="lead">Join as a Customer or log in as an Employee to manage retail operations efficiently.</p>
        <a href="/Customer/Login" class="btn btn-light btn-lg me-3">Customer Portal</a>
        <a href="/Employee/Login" class="btn btn-outline-light btn-lg">Employee Portal</a>
    </div>
</section>
